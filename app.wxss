/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  padding: 0 20rpx;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #f8f9fb;
} 
/** 活动css */
.activityAbstract {
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
}
.activityAbstract > view {
	width: 45%;
	height: 350rpx;
	/* background-color: red; */
	margin: 20rpx 0;
}
.activityAbstract image {
	border-radius: 20rpx;
	width: 100%;
	height: 200rpx;
}
.tabMainText {
	font-size: 30rpx;
	color: #333333;
}
.tabSideText {
	font-size: 25rpx;
	color: #7F7F7F;
}
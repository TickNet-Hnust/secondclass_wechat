.UCenter-bg {
  /* background-image: linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%); */
  height: 550rpx;
  display: flex;
  z-index: 10;
  justify-content: center;
  padding-top: 40rpx;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  animation: updown 6s infinite alternate;
}
@keyframes updown {
  0% {
    background-position: 50% 50%;
  }
  100% {
    background-position: 50% 60%;
  }
}
.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}
.girfather {
  position: absolute;
  bottom: -100rpx;
  width: 150vw;
  height: 200rpx;
}
.UCenter-bg .gif-wave {
  position: absolute;
  width: 150vw;
  bottom: 100rpx;
  left: 0;
  mix-blend-mode: screen;
  height: 100rpx;
  transform-origin: center bottom;
}
.gif-buttom {
  position: absolute;
  transform-origin: center top;
  top: 99rpx;
  width: 150vw;
  height: 100rpx;
}
map,
.mapBox {
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  width: 750rpx;
  height: 300rpx;
}

.colorList {
  position: fixed;
  display: flex;
  justify-content: space-around;
  left: 50%;
  transform: translateX(-50%) scale(0);
  transition: all 0.3s ease-in-out 0s;
  width: 70%;
  text-align: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  z-index: 999;
  bottom: 100rpx;
  box-shadow: 0 0 12px #ddd;
  opacity: 0;
}
.colorList > view {
  border-radius: 999em;
  width: 60rpx;
  height: 60rpx;
  /* border: 1px solid #ddd; */
}
.showColor {
  opacity: 1;
	transition-duration: 0.3s;
	transform: translateX(-50%) scale(1);
	overflow-x: hidden;
	overflow-y: auto;
	pointer-events: auto;
}
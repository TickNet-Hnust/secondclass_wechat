							<view class="text-gray text-sm flex">
							<text class="text-cut">{{groupClassificationMap[item.type]}}-{{item.parentName}}</text>
							</view>
						</view>
						<view class="action">
							<view class="cu-capsule round">
								<view class="cu-tag bg-blue sm">
									<text class="cuIcon-peoplelist"></text>
								</view>
								<view class="cu-tag line-blue sm">
									{{item.memberNumber}}
								</view>
							</view>
						</view>
						</view>
					</view>
				</view>
				<view wx:if="{{allGroupList.length >= 10}}" class="cu-load bg-white {{isLoading?'loading':'over'}}"></view>
			</scroll-view>
	</view>
	<!-- 热门 -->

.detail .van-tabs__wrap {
  width: 65%;
  margin: 0 auto;
}
.leftTitle {
  font-weight: 700;
  font-size: 24rpx;
}
.rightContent {
  font-size: 24rpx;

  color: rgba(51, 51, 51, 0.647058823529412);
}
.rightContent view {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.boxs {
  position: relative;
  background-color: #fff;
  border-radius: 18rpx;
  margin-top: 20rpx;
}
.box-p {
  font-size: 24rpx;
  color: rgba(51, 51, 51, 0.647058823529412);
}
.flexLines {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 18rpx;
  margin-top: 20rpx;
}
.flexMainTitle {
  font-weight: 700;
  font-size: 31rpx;
}
.flexSideTitle {
  font-size: 24rpx;
  color: rgba(128, 128, 128, 0.6);
}
.flexLines button {
  margin: 10rpx auto !important;
}
.iconBg {
  text-align: center;
  height: 64rpx;
  font-size: 32rpx;
  /* border-top: 1px solid #ddd; */
}
.cu-list .action {
  width: 150rpx !important;
  text-align: right !important;
}
.peoples .cu-item {
  height: 150rpx;
}
.mainShow {
  margin-top: 20rpx;
  height: 170rpx;
}
.mainShow .cu-item {
  height: 175rpx !important;
}
.mainShow .cu-avatar {
  width: 114rpx !important;
  height: 114rpx !important;
}
.mainShow .content {
  left: 180rpx !important;
}
.van-tabs__content {

@import "colorui/main.wxss";
@import "colorui/icon.wxss";
@import "colorui/animation.wxss";
@import "font/iconfont.wxss";
  
.container {
  height: 100%;
  display: flex;
  padding: 0 20rpx;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #f8f9fb;
} 
/** 活动css */
.activityAbstract {
	display: flex;
	padding:  1% 0;
	/* background-color: #fff; */
	justify-content: space-between;
	flex-wrap: wrap;
}
.activityAbstract > view {
	width: 47vw; 
	height: 340rpx;
	margin-top: 20rpx;
	/* background-color: red; */
	margin: 10rpx 0;
}
.activityAbstract image {
	/* border-radius: 20rpx; */
	width: 100%;
	height: 28vw;
}
.van-empty image {
	height: 100%;
}
.van-sticky-wrap {
	background-color: #fff ;
}
.tabMainText {
	font-size: 25rpx;
	padding: 0 20rpx;
	/* font-weight: 700; */
	padding-top: 10rpx;
	/* padding-bottom: 20rpx; */
	/* overflow: hidden; */
	/* text-overflow:ellipsis; */
	/* white-space: nowrap; */
	text-overflow:ellipsis;

	z-index: -1;
  
	display: -webkit-box;
  
	word-break: break-all;
  
	-webkit-box-orient: vertical;
  
	-webkit-line-clamp: 2;
  
	overflow: hidden;
	color: #333333;
}
.tabSideText {
	position: absolute;
	bottom: 8rpx;
	width: 100%;
	font-size: 22rpx;
	padding: 0 20rpx;
	margin-bottom: 10rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
	color: #7F7F7F;
}
.activityFull {
	position: relative;
	box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
	background-color: #fff;
	border-radius: 5px;
}
.activityFull  image {
	overflow: hidden;
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
	/* background-color: #fff; */
	/* box-shadow:  0 0 8rpx #ccc; */
}
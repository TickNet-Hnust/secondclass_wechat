										</view>
										<view class="cu-form-group " style="padding: 1rpx 30rpx;">
											<view class="title">主办方</view>
											<input class="text-right" disabled value="{{showData.groupName}}"></input>
										</view>
										
										<view class="cu-form-group" style="padding: 1rpx 30rpx;">

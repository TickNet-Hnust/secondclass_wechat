/* pages/activity-template/activity-template.wxss */
.template {
	/* padding: 0 30rpx; */
	padding-bottom: 140rpx;
	overflow: hidden;
}
.template  .van-tabs__wrap {
	width: 50%;
	margin: 0 auto;
}
.templateTitle {
	text-align: center;
    font-weight: 700;
    padding: 29rpx;
    font-size: 42rpx;
}
.customTitle {
	padding: 10rpx 36rpx;
	font-size: 24rpx;
	color: #646566;
	margin: 40rpx 0 0 0;
}
.stickyButton {
	position: fixed;
	left: 50%;
	transform: translateX(-50%);
	padding: 20rpx 0;
	bottom: 0;
	z-index: 99;
	width: 100%;
    background-color: #fff;
    text-align: center;
}
.maker {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-100%);
	width: 20px;
	height: 20px;
	font-family: 'iconfont';
}
#myMap{
	position: relative;
	width: 100vw;
	height: 60vh;
}
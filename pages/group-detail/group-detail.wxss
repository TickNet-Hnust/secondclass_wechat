}
.expand {
	position: absolute;
	right: 20rpx;
	width: 50rpx;
	height: 100%;
	/* transform: translateY(-50%); */
}
.mainTitle {
	overflow: hidden;
  box-sizing: border-box;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.circle {
	font-variant: small-caps;
    margin: 0;
    padding: 0;
    display: inline-flex;
    text-align: center;
    justify-content: center;
	align-items: center;
	position: absolute;
    left: 30rpx;
    white-space: nowrap;
    width: 100rpx;
    height: 100rpx;
    background-size: cover;
    background-position: center;
	vertical-align: middle;
	border: 2px solid #ddd;
}
.circleTop {
	font-size: 48rpx;
    position: absolute;
    top: 4rpx;
}
.circleBottom {
	font-size: 23rpx;
    position: absolute;
    bottom: 10rpx;
}
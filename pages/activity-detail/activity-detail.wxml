						<view class="cu-item">
							<view class="cu-avatar round lg" style="background-image:url({{item.userImage}});"></view>
							<view class="content flex-sub">
							<view>{{item.nickName}}</view>
							<view class="text-gray text-sm flex justify-between">
								2019年12月3日
							</view>
							</view>
						</view>
						</view>
						<view class="text-content">
						{{item.content}}
						</view>
						<view class="grid flex-sub padding-lr col-3 grid-square">
						<view class="bg-img " style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg);" wx:for="{{9}}" wx:key="index">
						</view>
						</view>
						<view class="text-gray text-sm text-right padding">

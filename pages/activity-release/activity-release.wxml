<!--pages/activity-release/activity-release.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}"><view slot="backText">返回</view>
	<view slot="content">活动发布</view>
</cu-custom>
<view class="release">
	<van-tabs 
		id="tabs" 
		active="{{active}}" 
		animated  
		color="#2d7ecd"
		title-active-color="#2d7ecd" 
		bind:click="switchTab"
	>
		<van-tab title="常用" name="a" >
			<view class="activityTemplate">
				<view wx:for="{{use}}" wx:key="index"  bindtap="jumpTemplate" class="templateItem {{toggleDelay?'animation-scale-up':''}}" style="animation-delay: {{(index+1)*0.1}}s;">
					<text class="itemMainText">{{item.title}}</text>
					<text class="itemSideText">{{item.side}}</text>
				</view>

			</view>
		</van-tab>
		<van-tab title="模版库" name="b">
			<view class="activityTemplate">
				<view wx:for="{{list}}" wx:key="index"  bindtap="jumpTemplate" class="templateItem {{toggleDelay?'animation-fade':''}}" style="animation-delay: {{(index+1)*0.1}}s;">
					<text class="itemMainText">{{item.title}}</text>
					<text class="itemSideText">{{item.side}}</text>
				</view>
				

			</view>
		</van-tab>
		<van-tab title="自定义" name="c">
		</van-tab>
	</van-tabs>
</view>
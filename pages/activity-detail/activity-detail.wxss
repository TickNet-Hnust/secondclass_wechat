/* pages/activity-detail/activity-detail.wxss */
.detail {
	padding: 0 2%;
	overflow: hidden;
	background-color: #f8f9fb;
}
.detail .van-tabs__wrap {
	width: 65%;
	margin: 0 auto;
}
.adImg {
	width: 100%; 
}

.customTitle {
	padding: 10rpx 36rpx;
	font-size: 24rpx;
	color: #646566;
	margin: 40rpx 0 0 0;
}
.leftTitle {
	font-weight: 700;
    font-size: 24rpx;
}
.rightContent {
	font-size: 24rpx;
	
	color: rgba(51, 51, 51, 0.647058823529412);
}
.rightContent view {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.boxs {
	background-color: #fff; 
	border-radius: 18rpx;
	margin-top: 30rpx;
	padding-top: 20rpx;
}
.box-p {
	font-size: 24rpx;
	color: rgba(51, 51, 51, 0.647058823529412);

}
.flexLines {
	padding: 20rpx;
	background-color: #fff; 
	border-radius: 18rpx;
	margin-top: 20rpx;
}
.flexMainTitle {
	font-weight: 700;
	font-size: 31rpx;
}
.flexSideTitle {
	font-size: 24rpx;
	color: rgba(128, 128, 128, 0.6);
}
.flexLines button{
	margin: 10rpx auto !important;
}
.iconBg {
	text-align: center;
	height: 83rpx;
	font-size: 32rpx;
	border-top: 1px solid #ddd;
}
.cu-list .action {
	width: 150rpx !important;
	text-align: right !important;
}
.peoples .cu-item {
	height: 150rpx;
}
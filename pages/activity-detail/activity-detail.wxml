							<van-col class="rightContent" span="18">{{showData.groupId}}</van-col>
						</van-row>
						<van-row style="line-height: 40rpx;">
							<van-col class="leftTitle"  span="6"><text class="cuIcon-title text-black"></text>活动级别</van-col>

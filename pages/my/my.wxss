.UCenter-bg {
	background-image: url(https://hnust-ticknet-swzl.oss-cn-hangzhou.aliyuncs.com/secondClass/2021/10/02/69a8033b-8d92-4c18-86f8-66ea73080019.png);
	background-size: 154%;
    background-position: center;
	height: 550rpx;
	display: flex;
	z-index: 10;
	justify-content: center;
	padding-top: 40rpx;
	position: relative;
	flex-direction: column;
	align-items: center;
	color: #fff;
	font-weight: 300;
	text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
	animation: updown 6s infinite alternate;
  }
  @keyframes updown{
	0% {
		background-position: 50% 50%;
	}
	100% {
		background-position: 50% 60%;
	}
  }
  .UCenter-bg text {
	opacity: 0.8;
  }
  
  .UCenter-bg image {
	width: 200rpx;
	height: 200rpx;
  }
  .girfather {
	  position: absolute;
	  bottom: -100rpx;
	  width: 150vw;
	  height: 200rpx;
  }
  .UCenter-bg .gif-wave{
	position: absolute;
	width: 150vw;
	bottom: 100rpx;
	left: 0;
	mix-blend-mode: screen;  
	height: 100rpx;
	transform-origin: center bottom;
  }
  .gif-buttom {
	  position: absolute;
	  transform-origin: center top;
	  top: 99rpx;
	  width: 150vw;
	  height: 100rpx;
  }
  map,.mapBox{
	left: 0;
	z-index: 99;
	mix-blend-mode: screen;  
	height: 100rpx;   
  }
  
  map,.mapBox{
	width: 750rpx;
	height: 300rpx;
  }